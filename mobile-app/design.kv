<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "User Login"
                font_size: '20sp'
                color: .75,0,1,.75
            TextInput:
                hint_text: "Username"
                id: username
                size_hint: 0.2,0.5
                background_color: .1,.1,.1,1
                foreground_color: 1,1,1,1
            TextInput:
                hint_text: "Password"
                id: password
                size_hint: 0.2,0.5
                foreground_color: 1,1,1,1
                background_color: .1,.1,.1,1
            RelativeLayout:    
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text,root.ids.password.text)
                    size_hint: 0.2, 0.5
                    pos_hint: {'center_x': 0.5,'center_y': 0.6}
                    background_color: .75,0,1,.75
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2,0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password"
                background_color: 1,1,1,0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                text: "Sign Up"
                on_press: root.sign_up()
                background_color: 1,1,1,0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.1, 0.7, 1, 1
            

<SignUpScreen>:
    GridLayout:
        cols:1
        padding: 20,20
        spacing: 20,20
        Label:
            text: "Sign up for a space journey"
            color: .75,0,1,.75
            font_size: '20sp'
        TextInput:
            size_hint: 0.2,0.2
            id: username
            hint_text: "New Username"
            foreground_color: 1,1,1,1
            background_color: .1,.1,.1,1
        TextInput:
            size_hint: 0.2,0.2
            id: password
            hint_text: "New password"
            foreground_color: 1,1,1,1
            background_color: .1,.1,.1,1
        Button:
            opacity: 1 if self.state == "normal" else 0.5
            color: 0.1, 0.7, 1, 1
            background_color: 1,1,1,0
            text: "sign up"
            on_press: root.add_user(root.ids.username.text,root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 20,20
        spacing: 20,20
        Label:
            text: "Sign up Succesfull"
            color: .75,0,1,.75
            font_size: '20sp'
        Button:
            text: "Login Page"
            on_press: root.back_login()
            opacity: 1 if self.state == "normal" else 0.5
            color: 0.1, 0.7, 1, 1
            background_color: 1,1,1,0

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 30,30
        spacing: 30,30
        RelativeLayout:
            ImageButton: 
                on_press: root.log_out()
                source: "logout_hover.png" if self.hovered else "logout_nothover.png"
                size_hint: 0.25,0.25
                pos_hint: {'center_x': 0.9,'center_y': 0.8}
        Label:
            text: "How do you feel?"
            color: .75,0,1,.75
            font_size: '20sp'
        TextInput:
            id: feeling
            hint_text: "Things to try: happy, sad, unloved"
            foreground_color: 1,1,1,1
            background_color: .1,.1,.1,1
        RelativeLayout:    
            Button:
                size_hint: 0.5,0.5
                pos_hint: {'center_x': 0.5,'center_y': 0.6}
                text: "Enlighten me"
                on_press: root.get_quote(root.ids.feeling.text)
                background_color: .75,0,1,.75
        ScrollView:
            Label:
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
                id: quote
                text: ""



<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "Sign_up_Screen"
    SignUpScreenSuccess:
        name: "Sign_Up_Screen_Success"
    LoginScreenSuccess:
        name: "Login_Screen_Success"
